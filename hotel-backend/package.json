{
  "name": "hotel-backend",
  "version": "1.0.0",
  "description": "Backend for the hotel management app",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only ./src/server.ts",

    
    "build": "tsc",

    "postinstall": "prisma generate",

    
    "start": "prisma migrate deploy && node dist/server.js",

    
    "migrate": "prisma migrate deploy",
    "seed": "prisma db seed"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "node",
    "express",
    "typescript",
    "hotel",
    "backend"
  ],
  "author": "Franco Gatti",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "express-slow-down": "^3.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "pdfkit": "^0.17.2",
    "pg": "^8.18.0",
    "puppeteer": "^24.37.2",
    "ts-node": "^10.9.2",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.9.2",
    "@types/pdfkit": "^0.17.4",
    "@types/pg": "^8.16.0",
    "@types/winston": "^2.4.4",
    "prisma": "^6.18.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
