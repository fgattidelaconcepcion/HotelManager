{
  "name": "hotel-backend",
  "version": "1.0.0",
  "description": "Backend for the hotel management app",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/services/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "npx dotenv-cli -- npx prisma migrate dev --name init --schema=prisma/schema.prisma",
    "generate": "npx dotenv-cli -- npx prisma generate",
    "seed": "npx prisma db seed"
  },
  "keywords": ["node", "express", "typescript", "hotel", "backend"],
  "author": "Franco Gatti",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.9.2",
    "dotenv-cli": "^11.0.0",
    "prisma": "^6.18.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
