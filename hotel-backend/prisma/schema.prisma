generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

/**
 * ============================
 * ENUMS
 * ============================
 */

enum UserRole {
  admin
  receptionist
}

enum BookingStatus {
  pending
  confirmed
  cancelled
  checked_in
  checked_out
}

/**
 * ✅ NUEVO: Estado de Habitación tipado (producto real)
 * Mantengo valores en español para no romper el front hoy.
 */
enum RoomStatus {
  disponible
  ocupado
  mantenimiento
}

/**
 * ============================
 * MODELO USER
 * ============================
 */

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(receptionist)
  createdAt DateTime @default(now())

  bookings Booking[]
}

/**
 * ============================
 * MODELO ROOM TYPE
 * ============================
 */

model RoomType {
  id        Int    @id @default(autoincrement())
  name      String @unique
  basePrice Float
  capacity  Int

  rooms Room[]
}

/**
 * ============================
 * MODELO ROOM
 * ============================
 */

model Room {
  id          Int        @id @default(autoincrement())
  number      String     @unique
  floor       Int
  status      RoomStatus @default(disponible)
  description String?
  roomTypeId  Int

  roomType RoomType  @relation(fields: [roomTypeId], references: [id])
  bookings Booking[]
}

/**
 * ============================
 * MODELO GUEST
 * ============================
 */

model Guest {
  id             Int      @id @default(autoincrement())
  name           String
  email          String?  @unique
  phone          String?

  documentNumber String?  @map("documentnumber")
  address        String?

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  bookings Booking[]
}

/**
 * ============================
 * MODELO BOOKING
 * ============================
 */

model Booking {
  id         Int           @id @default(autoincrement())
  userId     Int?
  guestId    Int?
  roomId     Int
  checkIn    DateTime
  checkOut   DateTime
  totalPrice Float

  status    BookingStatus @default(pending)
  createdAt DateTime      @default(now())

  room     Room      @relation(fields: [roomId], references: [id])
  user     User?     @relation(fields: [userId], references: [id])
  guest    Guest?    @relation(fields: [guestId], references: [id])
  payments Payment[]
}

/**
 * ============================
 * MODELO PAYMENT
 * ============================
 */

model Payment {
  id        Int      @id @default(autoincrement())
  booking   Booking  @relation(fields: [bookingId], references: [id])
  bookingId Int
  amount    Int
  method    String
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
