generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

/**
 * ============================
 * MODELO USER
 * ============================
 */

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("recepcion")
  createdAt DateTime @default(now())

  bookings Booking[]
}

/**
 * ============================
 * MODELO ROOM TYPE
 * ============================
 */

model RoomType {
  id        Int    @id @default(autoincrement())
  name      String
  basePrice Float
  capacity  Int

  rooms Room[]
}

/**
 * ============================
 * MODELO ROOM
 * ============================
 */

model Room {
  id          Int     @id @default(autoincrement())
  number      String  @unique
  floor       Int
  status      String  @default("disponible") // coherente con tu backend
  description String?
  roomTypeId  Int

  roomType RoomType  @relation(fields: [roomTypeId], references: [id])
  bookings Booking[]
}

/**
 * ============================
 * MODELO GUEST
 * ============================
 */

model Guest {
  id        Int      @id @default(autoincrement())
  name      String
  email     String?  @unique
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings Booking[]
}

/**
 * ============================
 * MODELO BOOKING
 * ============================
 */

enum BookingStatus {
  pending
  confirmed
  cancelled
  checked_in
  checked_out
}

model Booking {
  id         Int      @id @default(autoincrement())
  userId     Int?
  guestId    Int?
  roomId     Int
  checkIn    DateTime
  checkOut   DateTime
  totalPrice Float

  status    BookingStatus @default(pending)
  createdAt DateTime      @default(now())

  room     Room      @relation(fields: [roomId], references: [id])
  user     User?     @relation(fields: [userId], references: [id])
  guest    Guest?    @relation(fields: [guestId], references: [id])
  payments Payment[] // üëà relaci√≥n inversa con Payment
}

/**
 * ============================
 * MODELO PAYMENT
 * ============================
 */

model Payment {
  id        Int      @id @default(autoincrement())
  booking   Booking  @relation(fields: [bookingId], references: [id])
  bookingId Int
  amount    Int // o Float/Decimal si quer√©s m√°s precisi√≥n
  method    String // "cash", "card", "transfer", etc.
  status    String // "pending", "completed", "failed", etc.
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
