generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

/**
 * ============================
 * ENUMS
 * ============================
 */

enum UserRole {
  admin
  receptionist
}

enum BookingStatus {
  pending
  confirmed
  cancelled
  checked_in
  checked_out
}

/**
 * Here I keep RoomStatus in Spanish because my frontend is already using these values.
 * I can refactor to English later, but I don't want to break existing UI today.
 */
enum RoomStatus {
  disponible
  ocupado
  mantenimiento
}

/**
 * ============================
 * MULTI-HOTEL (TENANT) MODEL
 * ============================
 *
 * Here I introduce the Hotel model to support multi-tenant data isolation.
 * Every domain entity will point to exactly one Hotel via hotelId.
 */
model Hotel {
  id        Int      @id @default(autoincrement())
  name      String
  code      String   @unique
  createdAt DateTime @default(now())

  users     User[]
  roomTypes RoomType[]
  rooms     Room[]
  guests    Guest[]
  bookings  Booking[]
}

/**
 * ============================
 * USER
 * ============================
 */
model User {
  id        Int      @id @default(autoincrement())
  hotelId   Int
  name      String
  email     String
  password  String
  role      UserRole @default(receptionist)
  createdAt DateTime @default(now())

  hotel    Hotel    @relation(fields: [hotelId], references: [id])
  bookings Booking[]

  // Here I make email unique per hotel (not globally).
  @@unique([hotelId, email])
}

/**
 * ============================
 * ROOM TYPE
 * ============================
 */
model RoomType {
  id        Int    @id @default(autoincrement())
  hotelId   Int
  name      String
  basePrice Float
  capacity  Int

  hotel Hotel @relation(fields: [hotelId], references: [id])
  rooms Room[]

  // Here I make the room type name unique per hotel.
  @@unique([hotelId, name])
}

/**
 * ============================
 * ROOM
 * ============================
 */
model Room {
  id          Int        @id @default(autoincrement())
  hotelId     Int
  number      String
  floor       Int
  status      RoomStatus @default(disponible)
  description String?
  roomTypeId  Int

  hotel    Hotel     @relation(fields: [hotelId], references: [id])
  roomType RoomType  @relation(fields: [roomTypeId], references: [id])
  bookings Booking[]

  // Here I make room numbers unique per hotel.
  @@unique([hotelId, number])
}

/**
 * ============================
 * GUEST
 * ============================
 */
model Guest {
  id             Int      @id @default(autoincrement())
  hotelId        Int
  name           String
  email          String?
  phone          String?

  documentNumber String?  @map("documentnumber")
  address        String?

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  hotel    Hotel    @relation(fields: [hotelId], references: [id])
  bookings Booking[]

  // Here I make guest email unique per hotel (nullable unique works in SQLite).
  @@unique([hotelId, email])
}

/**
 * ============================
 * BOOKING
 * ============================
 */
model Booking {
  id         Int           @id @default(autoincrement())
  hotelId    Int
  userId     Int?
  guestId    Int?
  roomId     Int
  checkIn    DateTime
  checkOut   DateTime
  totalPrice Float

  status     BookingStatus @default(pending)
  createdAt DateTime      @default(now())

  // Here I store the real operational timestamps.
  // This allows me to know when the guest actually checked in/out,
  // not just the scheduled dates.
  checkedInAt  DateTime?
  checkedOutAt DateTime?

  hotel    Hotel     @relation(fields: [hotelId], references: [id])
  room     Room      @relation(fields: [roomId], references: [id])
  user     User?     @relation(fields: [userId], references: [id])
  guest    Guest?    @relation(fields: [guestId], references: [id])
  payments Payment[]
}


/**
 * ============================
 * PAYMENT
 * ============================
 */
model Payment {
  id        Int      @id @default(autoincrement())
  booking   Booking  @relation(fields: [bookingId], references: [id])
  bookingId Int
  amount    Int
  method    String
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
