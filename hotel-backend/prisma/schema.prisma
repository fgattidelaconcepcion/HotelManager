generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

/**
 * ============================
 * ENUMS
 * ============================
 */

enum UserRole {
  admin
  receptionist
}

enum BookingStatus {
  pending
  confirmed
  cancelled
  checked_in
  checked_out
}

/**
 * Room status in Spanish (UI already uses these values)
 */
enum RoomStatus {
  disponible
  ocupado
  mantenimiento
}

/**
 * Charges categories (matches your Zod enum)
 */
enum ChargeCategory {
  minibar
  service
  laundry
  other
}

/**
 * ============================
 * HOTEL (TENANT)
 * ============================
 */
model Hotel {
  id   Int    @id @default(autoincrement())
  name String
  code String @unique

  // RIHP - Establishment info
  address            String?
  responsibleName    String?
  registrationNumber String?

  createdAt DateTime @default(now())

  users     User[]
  roomTypes RoomType[]
  rooms     Room[]
  guests    Guest[]
  bookings  Booking[]

  // New modules
  charges           Charge[]
  stayRegistrations StayRegistration[]
  dailyCloses       DailyClose[]
}

/**
 * ============================
 * USER
 * ============================
 */
model User {
  id        Int      @id @default(autoincrement())
  hotelId   Int
  name      String
  email     String
  password  String
  role      UserRole @default(receptionist)
  createdAt DateTime @default(now())

  hotel    Hotel     @relation(fields: [hotelId], references: [id])
  bookings Booking[]

  // Opposite relations for auditing
  createdCharges           Charge[]
  createdStayRegistrations StayRegistration[]

  // Daily close creator (audit)
  createdDailyCloses DailyClose[] @relation("DailyCloseCreatedBy")

  @@unique([hotelId, email])
}

/**
 * ============================
 * ROOM TYPE
 * ============================
 */
model RoomType {
  id        Int    @id @default(autoincrement())
  hotelId   Int
  name      String
  basePrice Float
  capacity  Int

  hotel Hotel  @relation(fields: [hotelId], references: [id])
  rooms Room[]

  @@unique([hotelId, name])
}

/**
 * ============================
 * ROOM
 * ============================
 */
model Room {
  id          Int        @id @default(autoincrement())
  hotelId     Int
  number      String
  floor       Int
  status      RoomStatus @default(disponible)
  description String?
  roomTypeId  Int

  hotel    Hotel     @relation(fields: [hotelId], references: [id])
  roomType RoomType  @relation(fields: [roomTypeId], references: [id])
  bookings Booking[]

  // Opposites
  charges           Charge[]
  stayRegistrations StayRegistration[]

  @@unique([hotelId, number])
}

/**
 * ============================
 * GUEST
 * ============================
 */
model Guest {
  id      Int     @id @default(autoincrement())
  hotelId Int
  name    String
  email   String?
  phone   String?

  // RIHP - Extra required fields
  maritalStatus String?
  occupation    String?
  provenance    String? // residencia habitual / procedencia

  // Existing
  documentNumber String? @map("documentnumber")
  address        String?

  // Fields used by stayRegistration snapshots
  documentType String?
  nationality  String?
  birthDate    DateTime?
  gender       String?
  city         String?
  country      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  hotel    Hotel     @relation(fields: [hotelId], references: [id])
  bookings Booking[]

  // Opposite
  stayRegistrations StayRegistration[]

  @@unique([hotelId, email])
}

/**
 * ============================
 * BOOKING
 * ============================
 */
model Booking {
  id         Int      @id @default(autoincrement())
  hotelId    Int
  userId     Int?
  guestId    Int?
  roomId     Int
  checkIn    DateTime
  checkOut   DateTime
  totalPrice Float

  status    BookingStatus @default(pending)
  createdAt DateTime      @default(now())

  checkedInAt  DateTime?
  checkedOutAt DateTime?

  hotel    Hotel     @relation(fields: [hotelId], references: [id])
  room     Room      @relation(fields: [roomId], references: [id])
  user     User?     @relation(fields: [userId], references: [id])
  guest    Guest?    @relation(fields: [guestId], references: [id])
  payments Payment[]

  // New modules
  charges          Charge[]
  stayRegistration StayRegistration?

  @@index([hotelId, roomId])
  @@index([hotelId, guestId])
}

/**
 * ============================
 * PAYMENT
 * ============================
 */
model Payment {
  id        Int      @id @default(autoincrement())
  bookingId Int
  amount    Int
  method    String
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  booking Booking @relation(fields: [bookingId], references: [id])

  @@index([bookingId])
}

/**
 * ============================
 * CHARGE (CONSUMPTION / EXTRAS)
 * ============================
 */
model Charge {
  id          Int  @id @default(autoincrement())
  hotelId     Int
  bookingId   Int
  roomId      Int
  createdById Int?

  category    ChargeCategory @default(other)
  description String
  qty         Int            @default(1)
  unitPrice   Int
  total       Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  hotel     Hotel   @relation(fields: [hotelId], references: [id])
  booking   Booking @relation(fields: [bookingId], references: [id])
  room      Room    @relation(fields: [roomId], references: [id])
  createdBy User?   @relation(fields: [createdById], references: [id])

  @@index([hotelId, bookingId])
  @@index([hotelId, roomId])
  @@index([createdById])
}

/**
 * ============================
 * STAY REGISTRATION (POLICE REPORT SNAPSHOT)
 * ============================
 */
model StayRegistration {
  id          Int  @id @default(autoincrement())
  hotelId     Int
  bookingId   Int  @unique
  roomId      Int
  guestId     Int?
  createdById Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Snapshot identity
  guestName  String
  guestEmail String?
  guestPhone String?

  // RIHP - Snapshot extra required fields
  maritalStatus String?
  occupation    String?
  provenance    String?

  // RIHP - Establishment snapshot (auditable)
  hotelAddress            String?
  hotelResponsibleName    String?
  hotelRegistrationNumber String?

  nationality    String?
  documentType   String?
  documentNumber String?
  birthDate      DateTime?
  gender         String?
  address        String?
  city           String?
  country        String?

  // Snapshot stay dates
  scheduledCheckIn  DateTime
  scheduledCheckOut DateTime
  checkedInAt       DateTime?
  checkedOutAt      DateTime?

  hotel     Hotel   @relation(fields: [hotelId], references: [id])
  booking   Booking @relation(fields: [bookingId], references: [id])
  room      Room    @relation(fields: [roomId], references: [id])
  guest     Guest?  @relation(fields: [guestId], references: [id])
  createdBy User?   @relation(fields: [createdById], references: [id])

  @@index([hotelId, roomId])
  @@index([hotelId, guestId])
  @@index([createdById])
}

/**
 * ============================
 * DAILY CLOSE (CASH CLOSING)
 * ============================
 * Option A:
 * - A daily snapshot of COMPLETED payments for a given date (hotel-scoped).
 * - This creates an immutable record you can export later (CSV/PDF).
 * NOTE:
 * - We store dateKey as "YYYY-MM-DD" to avoid timezone shifting issues.
 * - Totals are integers (UYU) like Payment.amount.
 */
model DailyClose {
  id      Int    @id @default(autoincrement())
  hotelId Int
  dateKey String // "YYYY-MM-DD"

  // Core totals
  totalCompleted Int

  // Helpful breakdown
  countCompleted Int
  byMethod       Json? // { cash: 1200, card: 500, transfer: 0 } etc

  // Audit
  createdById Int?
  notes       String?
  createdAt   DateTime @default(now())

  hotel     Hotel @relation(fields: [hotelId], references: [id])
  createdBy User? @relation("DailyCloseCreatedBy", fields: [createdById], references: [id])

  @@unique([hotelId, dateKey], name: "hotelId_dateKey")
  @@index([hotelId, dateKey])
  @@index([createdById])
}
